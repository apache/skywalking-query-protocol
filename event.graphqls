scalar Long

type Event {
    uuid: String!
    source: Source!
    name: String!
    type: Type!
    message: String
    parameters: String
    # The start time (in milliseconds) of the event, measured between the current time and midnight, January 1, 1970 UTC.
    startTime: Long!
    # The end time (in milliseconds) of the event, measured between the current time and midnight, January 1, 1970 UTC. Empty if the event have not finished yet.
    endTime: Long
}

type Source {
    service: String
    serviceInstance: String
    endpoint: String
}

input SourceInput {
    service: String
    serviceInstance: String
    endpoint: String
}

enum Type {
    Normal
    Error
}

type Events {
    events: [Event!]!
    total: Int!
}

input EventQueryCondition {
    uuid: String
    source: SourceInput
    name: String
    type: Type
    time: Duration
    order: Order
    size: Int
}

extend type Query {
    queryEvents(condition: EventQueryCondition): Events
}
