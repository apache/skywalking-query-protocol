input EBPFProcessQueryEntityCondition {
    serviceId: ID!
    instanceId: ID
    endpointId: ID
}

type EBPFProcess {
    # process id
    id: String!
    # detect type
    type: EBPFProcessType!
    # host process data
    hostProcess: EBPFHostProcess
    # which entities are associated with the current process
    relatedEntities: [EBPFProcessRelateEntity]
}

type EBPFProcessRelateEntity {
    serviceId: ID!
    instanceId: ID
    endpointId: ID
}

enum EBPFProcessType {
    HOST
}

# eBPF process detect from host
type EBPFHostProcess {
    # process id
    pid: int!
    # process name
    name: String!
    # process service name
    serviceName: String
    # process full command line
    cmd: String!
    # process host ip address
    hostIP: string!
}

extend type Query {
    # query process list by entity
    getProcessListByEntity(duration: Duration!, condition: EBPFProcessQueryEntityCondition!): [EBPFProcess!]!
}
